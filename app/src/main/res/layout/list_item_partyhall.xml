<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="630dp"
    android:background="#F7F7F7"
    android:orientation="vertical"
    android:weightSum="9.5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.qmul.partymania.views.XCImageView
                android:id="@+id/hall_item_head_photo"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/default_photo" />

            <TextView
                android:id="@+id/hall_item_nickName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="user_nick_name"
                android:textColor="#262626"
                android:textStyle="bold"
                android:textSize="19sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/hall_item_party"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_party_mode_selected" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center">

            <ImageView
                android:layout_marginTop="2dp"
                android:id="@+id/hall_item_company"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_company_mode" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/hall_item_option"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_option" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.4">
        <ImageView
            android:id="@+id/hall_item_photo"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/test_pic2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingLeft="13dp"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/hall_item_love"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_love" />
            <ImageView
                android:layout_marginLeft="17dp"
                android:id="@+id/hall_item_message"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_mess" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="13dp"
            android:gravity="center">
            <TextView
                android:id="@+id/hall_item_date"
                android:text="08-18  19:00"
                android:textSize="18sp"
                android:textColor="#5E5E5E"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:paddingLeft="13dp"
        android:weightSum="1"
        android:background="#ffffff">
        <TextView

            android:gravity="center_vertical"
            android:id="@+id/hall_item_likes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:text="24,989 Have joined"
            android:textStyle="bold"
            android:textColor="#262626"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/hall_item_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:text="Time : 6:30 pm     Cost : 10￡Time : 6:30 pm     Cost : 10￡Time : 6:30 pm     Cost : 10￡"
            android:lines="2"
            android:textColor="#262626"
            android:textSize="16sp" />
        <TextView
            android:layout_marginTop="-8dp"
            android:id="@+id/hall_item_comments"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="View all comments"
            android:textColor="#999999"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

</LinearLayout>