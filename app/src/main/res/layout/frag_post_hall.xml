<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FEFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:text="NickName"
            android:textColor="#262626"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/post_to_hall_nickname"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="NULL"
            android:textColor="#262626"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="123dp"
        android:layout_marginRight="15dp"
        android:background="#CFCFCF" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:text="Type"
            android:textColor="#262626"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/post_to_hall_type"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="Post type"
            android:textColor="#000"
            android:textColorHint="#C7C7CC"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="123dp"
        android:layout_marginRight="15dp"
        android:background="#CFCFCF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:text="Time"
            android:textColor="#262626"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/post_to_hall_time"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="16:00"
            android:textColor="#000"
            android:textColorHint="#C7C7CC"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="123dp"
        android:layout_marginRight="15dp"
        android:background="#CFCFCF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:text="Cost"
            android:textColor="#262626"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/post_to_hall_cost"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="ï¿¡10 for 1 people"
            android:textColor="#000"
            android:textColorHint="#C7C7CC"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="123dp"
        android:layout_marginRight="15dp"
        android:background="#CFCFCF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:gravity="fill_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:layout_marginLeft="14dp"
            android:text="Description"
            android:textColor="#262626"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/post_to_hall_desc"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:gravity="top"
            android:hint="Description about the location"
            android:textColorHint="#C7C7CC"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>