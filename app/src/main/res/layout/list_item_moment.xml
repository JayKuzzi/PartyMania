<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="605dp"
    android:background="#F7F7F7"
    android:orientation="vertical"
    android:weightSum="9.5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.qmul.partymania.views.XCImageView
                android:id="@+id/moment_item_head_photo"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/default_photo" />

            <TextView
                android:id="@+id/moment_item_nickName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="user_nick_name"
                android:textColor="#262626"
                android:textStyle="bold"

                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/moment_item_option"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_option" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5">

        <ImageView
            android:id="@+id/moment_item_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/test_pic2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingLeft="13dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/moment_item_love"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_love" />
            <ImageView
                android:layout_marginLeft="17dp"
                android:id="@+id/moment_item_message"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_mess" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="13dp"
            android:gravity="center">

            <TextView
                android:id="@+id/moment_item_date"
                android:text="08-18  19:00"
                android:textSize="18sp"
                android:textColor="#5E5E5E"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:paddingLeft="13dp"
        android:weightSum="1"
        android:background="#ffffff">
        <TextView
            android:id="@+id/moment_item_likes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.27"
            android:text="24,989 likes"
            android:textStyle="bold"
            android:textColor="#262626"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/moment_item_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:text="Content_Content_Content"
            android:lines="1"
            android:gravity="center_vertical"
            android:textColor="#262626"
            android:textSize="18sp" />
        <TextView
            android:layout_marginTop="-5dp"
            android:id="@+id/moment_item_comments"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="View all comments"
            android:textColor="#999999"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

</LinearLayout>