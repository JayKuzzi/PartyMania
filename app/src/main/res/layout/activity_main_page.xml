<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_gravity="top"
        android:background="#FAFAFA"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/camera"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_camera" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/nickMame"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1E1E1E"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="NickName"/>

        <ImageView
            android:id="@+id/post"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginRight="14dp"
            android:src="@drawable/ic_post" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#C4C4C4" />

    <FrameLayout
        android:id="@+id/fragments_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FEFFFF"
        android:gravity="center">
        <fragment
            android:name="com.qmul.partymania.fragments.Moments"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#C4C4C4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_gravity="bottom"
        android:background="#FAFAFA"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/moment"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_moment_selected" />
        <ImageView
            android:id="@+id/dating_hall"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_hall" />
        <ImageView
            android:id="@+id/matching"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_matching" />
        <ImageView
            android:id="@+id/me"
            android:layout_width="28dp"
            android:layout_weight="1"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_me" />


    </LinearLayout>
</LinearLayout>