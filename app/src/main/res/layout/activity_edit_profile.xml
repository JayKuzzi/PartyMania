<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_gravity="top"
        android:background="#FAFAFA"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_profile_cancel"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:text="@string/cancel"
            android:textColor="#262626"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/edit_profile"
            android:textColor="#1E1E1E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edit_profile_done"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginRight="14dp"
            android:text="@string/done"
            android:textColor="#3897F0"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CFCFCF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.qmul.partymania.views.XCImageView
            android:id="@+id/change_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/default_photo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/change_profile_photo"
            android:textColor="#3897F0"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#CFCFCF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FEFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="UserName"
                android:textColor="#262626"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/edit_profile_username"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="NULL"
                android:textColor="#262626"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="123dp"
            android:layout_marginRight="15dp"
            android:background="#CFCFCF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="NickName"
                android:textColor="#262626"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_profile_nickname"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="NickName"
                android:maxLines="1"
                android:inputType="text"
                android:textColorHint="#C7C7CC"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="123dp"
            android:layout_marginRight="15dp"
            android:background="#CFCFCF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="FreeTime"
                android:textColor="#262626"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/edit_profile_freeTime"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="FreeTime"
                android:textColorHint="#C7C7CC"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="123dp"
            android:layout_marginRight="15dp"
            android:background="#CFCFCF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="Business"
                android:textColor="#262626"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/edit_profile_business"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="Business"
                android:textColor="#000"
                android:textColorHint="#C7C7CC"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="123dp"
            android:layout_marginRight="15dp"
            android:background="#CFCFCF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="Hobbies"
                android:textColor="#262626"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/edit_profile_hobby"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:hint="Hobbies"
                android:textColorHint="#C7C7CC"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="123dp"
            android:layout_marginRight="15dp"
            android:background="#CFCFCF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="Sign"
                android:textColor="#262626"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/edit_profile_sign"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="Sign"
                android:textColorHint="#C7C7CC"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="123dp"
            android:layout_marginRight="15dp"
            android:background="#CFCFCF" />
    </LinearLayout>
</LinearLayout>